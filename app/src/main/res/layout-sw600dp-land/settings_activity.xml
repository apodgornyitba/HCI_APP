<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="?android:windowBackground"
tools:context=".ui.SettingsActivity">


    <Button
        android:id="@+id/btnEspanol"

        android:layout_width="300dp"
        android:layout_height="100dp"

        android:layout_marginEnd="15dp"

        android:backgroundTint="?colorPrimary"

        android:singleLine="false"
        android:text="@string/language2"
        android:textColor="?textColorPrimaryButton"

        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:iconTint="?android:textColorPrimary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toEndOf="@+id/btnEnglish"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="508dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:text="@string/languages"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_text"
        app:layout_constraintVertical_bias="0.001" />

    <Button
        android:id="@+id/btnDark"

        android:layout_width="300dp"
        android:layout_height="100dp"

        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"

        android:backgroundTint="?colorPrimary"

        android:onClick="NightModeOn"

        android:singleLine="false"
        android:text="@string/mode1"
        android:textColor="?textColorPrimaryButton"

        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:iconTint="?android:textColorPrimary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEspanol" />

    <Button
        android:id="@+id/btnLight"

        android:layout_width="300dp"
        android:layout_height="100dp"

        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"

        android:backgroundTint="?colorPrimary"

        android:onClick="NightModeOff"

        android:singleLine="false"
        android:text="@string/mode2"
        android:textColor="?textColorPrimaryButton"

        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:iconTint="?android:textColorPrimary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnglish" />

    <TextView
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/title_activity_settings"
        android:textColor="?android:textColorPrimary"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEnglish"

        android:layout_width="300dp"
        android:layout_height="100dp"

        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        android:backgroundTint="?colorPrimary"

        android:singleLine="false"
        android:text="@string/language1"
        android:textColor="?textColorPrimaryButton"

        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:iconTint="?android:textColorPrimary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="546dp"
        android:layout_height="51dp"
        android:text="@string/mode"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.407" />

</androidx.constraintlayout.widget.ConstraintLayout>