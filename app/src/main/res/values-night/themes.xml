<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hci_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue_dark_600</item>
        <item name="colorPrimaryVariant">@color/lightblue_dark_500</item>
        <item name="colorOnPrimary">@color/black_400</item>

        <item name="colorDeviceButton">@color/lightblue_dark_100</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark_600</item>
        <item name="colorSecondaryVariant">@color/blue_dark_500</item>
        <item name="colorOnSecondary">@color/white_600</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>

        <!-- Screen background -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/white_600</item>
        <item name="android:textColorPrimaryDisableOnly">@color/grey_500</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>

        <item name="android:textColorHint">@color/grey_300</item>

        <item name="textColorPrimaryButton">@color/black_400</item>
        <item name="textColorSecondaryButton">@color/white_500</item>
        <item name="textColorDeviceButton">@color/black_400</item>

        <!-- Images -->
        <item name="android:tint">@color/white</item>
    </style>
</resources>